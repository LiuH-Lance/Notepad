<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@id/writedate"
        android:textColor="#ffff0000"
        android:layout_gravity="center"
        android:background="@drawable/shapetop"
        android:layout_width="300.0dip"
        android:layout_height="30.0dip"
        android:layout_marginTop="10.0dip"
        />
    <TextView
        android:id="@+id/writedown"
        android:textSize="18.0sp"
        android:textColor="#ff000000"
        android:layout_gravity="center"
        android:background="@drawable/shape"
        android:scrollbars="vertical"
        android:layout_width="300dp"
        android:layout_height="108.0dip"
        android:lineSpacingExtra="3.0dip" />
    <ImageView
        android:id="@+id/delete"
        android:layout_marginRight="18dp"
        android:layout_marginTop="-135dp"
        android:layout_gravity="right"
        android:background="@drawable/stylebutton2"
        android:focusable="false"
        android:layout_width="27.0dip"
        android:layout_height="27.0dip" />
    <ImageView
        android:id="@+id/write_down"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-27dp"
        android:background="@drawable/stylebutton1"
        android:focusable="false"
        android:layout_width="27.0dip"
        android:layout_height="27.0dip" />


</LinearLayout>